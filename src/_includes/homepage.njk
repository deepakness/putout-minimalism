---
layout: base.njk
---
<div class="container mx-auto px-4 py-10">
    <div class="flex flex-col lg:flex-row">
        <!-- Left side: Book cover and info -->
        <div class="lg:w-1/3 lg:pr-8 mb-8 lg:mb-0">
            <img src="{{ site.coverImage }}" alt="{{ site.title }} cover" class="w-full max-w-xs mx-auto lg:mx-0 h-auto rounded-lg mb-4">
            <h1 class="text-3xl font-bold mb-2 font-sans">{{ site.longTitle }}</h1>
            <p class="text-xl mb-4 font-sans">by {{ site.author }}</p>
            <p class="mb-4">{{ site.description }}</p>
            <div class="flex space-x-4 justify-center lg:justify-start">
                <!-- Social icons here -->
            </div>
        </div>
        <!-- Right side: Chapter cards -->
        <div class="lg:w-2/3">
            <h2 class="text-3xl font-bold mb-4 font-sans">Chapters</h2>
            <div class="grid gap-6 grid-cols-1 sm:grid-cols-2">
                {%- for chapter in collections.chapters -%}
                    {% include "chapterCard.njk" %}
                {%- endfor -%}
            </div>
        </div>
    </div>
</div>